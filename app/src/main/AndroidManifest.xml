<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macintosh.thebakingappproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cupcake"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cupcake_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TheMasterActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode|layoutDirection">

        </activity>

        <service
            android:name=".ListViewWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <service android:name=".WidgetUpdateService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.macintosh.thebakingappproject.widgetupdateservice.update_app_widget"/>
                <action android:name="com.example.macintosh.thebakingappproject.widgetupdateservice.update_app_widget_list"/>
            </intent-filter>
        </service>

        <receiver android:name=".RecipeWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recipe_widget_provider_info" />
        </receiver>
    </application>

</manifest>